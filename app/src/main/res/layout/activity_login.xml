<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rusty.society_shopping.login">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <ImageView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="#00000000"
        android:id="@+id/top"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="14dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:text="Choose Your Society"
            android:textAllCaps="true"
            android:textColor="#000"
            android:layout_marginBottom="5dp"/>

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="fill_parent"
            android:paddingTop="20dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/emailfront"
            android:hint="Enter Email"
            android:inputType="textWebEmailAddress"
            android:maxLines="1"
            android:textColor="#000"
            android:textColorHint="#000"
            android:maxLength="30"
            android:drawablePadding="10dp"
            android:id="@+id/et_email"
            android:layout_below="@+id/spinner2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="25dp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_email"
            android:drawableLeft="@drawable/accountkeyfront"
            android:hint="Enter Password"
            android:textColor="#000"
            android:textColorHint="#000"
            android:maxLines="1"
            android:maxLength="15"
            android:drawablePadding="10dp"
            android:inputType="textPassword"
            android:id="@+id/et_password"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:background="@drawable/eye1"
            android:layout_marginTop="10dp"
            android:layout_below="@id/et_email"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:id="@+id/btn_eye"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="   Forgot Password?      "
            android:textAllCaps="false"
            android:background="#00000000"
            android:textColor="#000"
            android:textStyle="bold"
            android:id="@+id/btn_forgotpassword"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/et_password"
            android:layout_alignParentRight="true"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Login"
            android:textAllCaps="false"
            android:background="#ff5555"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_below="@id/btn_forgotpassword"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:onClick="onClick"
            android:layout_marginRight="20dp"
            android:id="@+id/btn_login"
            />
</RelativeLayout>

    </RelativeLayout>
